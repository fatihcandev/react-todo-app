{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-dom": "^16.9.8",
    "node-sass": "4.14.1",
    "react": "^17.0.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "lint": "yarn run lint:ts && yarn run lint:css",
    "lint:ts": "tsc && yarn lint:eslint",
    "lint:eslint": "eslint src/**/*.{ts,tsx}",
    "lint:css": "stylelint --syntax scss src/**/*.scss",
    "format": "yarn run format:ts && yarn run format:css",
    "format:ts": "prettier --write src/**/*.{ts,tsx} && yarn lint:eslint --fix",
    "format:check": "prettier -c src/**/*.{ts,tsx}",
    "format:css": "stylelint --fix --syntax scss src/**/*.scss"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@atolye15/eslint-config": "^1.2.0",
    "@hot-loader/react-dom": "^17.0.1",
    "customize-cra": "^1.0.0",
    "eslint": "^7.15.0",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.7"
  }
}
